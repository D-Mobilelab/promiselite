{
  "name": "promiselite",
  "version": "1.2.1",
  "description": "A light, browser-friendly implementation of JavaScript Promises",
  "main": "promise.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "docs": "rm out -rf && node_modules/.bin/jsdoc src/promiselite.js -d docs",
    "build:no:min": "mkdir -p dist && browserify src/promiselite.js -o dist/promiselite.js -s PromiseLite",
    "build:min": "browserify src/promiselite.js -s PromiseLite | uglifyjs -c --mangle > dist/promiselite.min.js",
    "build": "npm run docs && npm run build:no:min && npm run build:min",
    "test:develop": "karma start",
    "test": "npm run build && karma start --no-auto-watch --browsers PhantomJS --single-run"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:D-Mobilelab/promiselite.git"
  },
  "keywords": [
    "lite",
    "light",
    "browser",
    "support",
    "promise",
    "javascript"
  ],
  "author": "Fabio Fognani",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.0.0",
    "browserify-istanbul": "^2.0.0",
    "catharsis": "^0.8.7",
    "istanbul": "^0.4.3",
    "jasmine-ajax": "^3.2.0",
    "jasmine-core": "^2.4.1",
    "jsdoc": "^3.2.2",
    "karma": "^0.13.22",
    "karma-browserify": "^4.4.2",
    "karma-chrome-launcher": "^0.2.1",
    "karma-cli": "^0.1.2",
    "karma-commonjs": "0.0.13",
    "karma-coverage": "^0.5.5",
    "karma-firefox-launcher": "^0.1.6",
    "karma-growl-reporter": "^0.1.1",
    "karma-html-reporter": "^0.2.7",
    "karma-jasmine": "^0.3.8",
    "karma-mocha-reporter": "^1.1.3",
    "karma-phantomjs-launcher": "^0.2.3",
    "karma-spec-reporter": "0.0.22",
    "phantomjs": "^2.1.7",
    "phantomjs-polyfill": "0.0.1",
    "phantomjs-prebuilt": "^2.1.7",
    "taffydb": "^2.7.2",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  }
}
